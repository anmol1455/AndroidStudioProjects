<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/puuuu"
    android:layout_height="match_parent"
    tools:context=".facility">
    <RelativeLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/i1"
            android:background="@drawable/wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/t1"
            android:text="Internet"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/t2"
            android:layout_below="@id/t1"
            android:text="WIFI is available in all areas and is free of charge!"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/i2"
            android:layout_below="@id/t2"
            android:background="@drawable/parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/t3"
            android:layout_below="@id/t2"
            android:text="Parking"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/t4"
            android:layout_below="@id/t3"
            android:text="Free private parking is possible on site!"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/i3"
            android:layout_below="@id/t4"
            android:background="@drawable/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/t5"
            android:layout_below="@id/t4"
            android:text="General"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/t6"
            android:layout_below="@id/t5"
            android:text="Room service!  Soundproof of rooms! Non-smoking rooms! Newspapers! Security Lockers"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/i4"
            android:layout_below="@id/t6"
            android:background="@drawable/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/t7"
            android:layout_below="@id/t6"
            android:text="Reception Service"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/t8"
            android:layout_below="@id/t7"
            android:text="24 Hour Reception! 24 Hour Security! Telephone Facility! Laundry Facility!"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/i5"
            android:layout_below="@id/t8"
            android:background="@drawable/cctv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/t9"
            android:layout_below="@id/t8"
            android:text="Miscellaneous"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/t10"
            android:layout_below="@id/t9"
            android:textSize="20sp"
            android:text="CCTV in common areas! CCTV outside proberty!"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/i6"
            android:layout_below="@id/t10"
            android:background="@drawable/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/t11"
            android:layout_below="@id/t10"
            android:text="Food and Drink"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/t12"
            android:layout_below="@id/t11"
            android:textSize="20sp"
            android:text="Cooker! Refrigerator! Special mess menu!"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</ScrollView>

