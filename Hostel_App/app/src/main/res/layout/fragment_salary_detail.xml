<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/puuuu"
    android:layout_height="match_parent"
    tools:context=".salaryDetail">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">



      <TextView
          android:id="@+id/tv1"
          android:text="Salary Detail"
          android:textSize="28sp"
          android:textStyle="bold"
          android:textColor="#000000"
          android:layout_marginLeft="110dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />




      <ImageView
          android:id="@+id/one"
          android:layout_marginTop="15dp"
          android:layout_below="@id/tv1"
          android:background="@drawable/wardena"
          android:layout_width="150dp"
          android:layout_height="150dp" />

      <TextView
          android:layout_marginTop="50dp"
          android:id="@+id/tv2"
          android:textStyle="bold"
          android:text="Warden            \    Salary Rs. /- 5000"
          android:textSize="22sp"
          android:layout_below="@id/tv1"
          android:layout_toRightOf="@id/one"
          android:layout_marginLeft="25dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />



      <ImageView
          android:id="@+id/two"
          android:layout_marginTop="70dp"
          android:layout_below="@id/tv2"
          android:background="@drawable/securitya"
          android:layout_width="150dp"
          android:layout_height="150dp" />


      <TextView
          android:layout_marginTop="110dp"
          android:id="@+id/tv3"
          android:textStyle="bold"
          android:text="Security Guard\  Salary Rs. /- 4500"
          android:textSize="22sp"
          android:layout_below="@id/tv2"
          android:layout_toRightOf="@id/two"
          android:layout_marginLeft="25dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <ImageView
          android:id="@+id/triple"
          android:layout_marginTop="10dp"
          android:layout_below="@id/two"
          android:background="@drawable/cooka"
          android:layout_width="150dp"
          android:layout_height="150dp" />

      <TextView
          android:layout_marginTop="110dp"
          android:id="@+id/tv4"
          android:textStyle="bold"
          android:text="Cook                 \    Salary Rs. /- 4200"
          android:textSize="22sp"
          android:layout_below="@id/tv3"
          android:layout_toRightOf="@id/triple"
          android:layout_marginLeft="25dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <ImageView
          android:id="@+id/four"
          android:layout_marginTop="10dp"
          android:layout_below="@id/triple"
          android:background="@drawable/sweepera"
          android:layout_width="150dp"
          android:layout_height="150dp" />


      <TextView
          android:layout_marginTop="110dp"
          android:id="@+id/tv5"
          android:textStyle="bold"
          android:text="Swipper            \  Salary Rs. /- 4000"
          android:textSize="22sp"
          android:layout_marginLeft="25dp"
          android:layout_below="@id/tv4"
          android:layout_toRightOf="@id/four"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />



   </RelativeLayout>
</ScrollView>