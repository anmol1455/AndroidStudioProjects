<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/roomg"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".student">


    <LinearLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DF0101"
            android:text="Student Details"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Blue"
            android:text="This module allows you to manage"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/stu_id"
            android:hint="Student ID"
            android:singleLine="true"
            android:inputType="text"
            android:textSize="20sp"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/e1"
            android:hint="Student Name"
            android:singleLine="true"
            android:inputType="text"
            android:textSize="20sp"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/e2"
            android:hint="DOB"
            android:inputType="date"
            android:singleLine="true"
            android:textSize="20sp"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/e3"
            android:singleLine="true"
            android:hint="Address"
            android:inputType="text"
            android:textSize="20sp"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/e4"
            android:hint="Contact No."
            android:textSize="20sp"
            android:singleLine="true"
            android:maxLength="10"
            android:inputType="phone"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/e5"
            android:hint="Email Id"
            android:textSize="20sp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/e6"
            android:hint="Joining Date"
            android:textSize="20sp"
            android:singleLine="true"
            android:inputType="date"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/e7"
            android:hint="College Name"
            android:textSize="20sp"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/e8"
            android:hint="Current Study Details"
            android:textSize="20sp"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DF0101"
            android:layout_gravity="center"
            android:text="Parent Details:"
            android:textSize="30dp"
            />
        <EditText
            android:id="@+id/e9"
            android:singleLine="true"
            android:hint="Student Father Name"
            android:textSize="20sp"
            android:inputType="text"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/e10"
            android:singleLine="true"
            android:hint="Father Occupation"
            android:textSize="20sp"
            android:inputType="text"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/e11"
            android:hint="Permanent Address"
            android:textSize="20sp"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/e12"
            android:singleLine="true"
            android:hint="Contact Number"
            android:textSize="20sp"
            android:inputType="phone"
            android:maxLength="10"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#880000"
            android:textSize="16sp"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/b_submit_stu_detil"
                android:layout_margin="18dp"
                android:textColor="@color/colorWhite"
                android:background="@color/Blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="insert"/>
            <Button
                android:id="@+id/b_cancel_stu_detail"
                android:layout_margin="18dp"
                android:textColor="@color/colorWhite"
                android:background="#DF0101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Cancel"/>

        </LinearLayout>

    </LinearLayout>



</ScrollView>