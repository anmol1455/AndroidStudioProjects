<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:background="@drawable/rooma"
    android:layout_height="match_parent"
    tools:context=".staff">


    <LinearLayout
        android:padding="35dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Staff Details"
            android:padding="16dp"
            android:textSize="30dp" />


        <EditText
            android:id="@+id/e_staff_name"
            android:inputType="text"
            android:singleLine="true"
            android:hint="Staff Name"
            android:textSize="20sp"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/e_staff_address"
            android:hint="Address"
            android:singleLine="true"
            android:inputType="text"
            android:textSize="20sp"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/e_staff_contact"
            android:hint="Contact No."
            android:textSize="20sp"
            android:inputType="phone"
            android:maxLength="10"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/e_staff_salary"
            android:hint="Salary"
            android:textSize="20sp"
            android:inputType="number"
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_error_msg_staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#880000"
            android:textSize="16sp"
            android:visibility="gone" />

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/btn_submit_staff"
                android:layout_margin="18dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Submit" />



            <Button
                android:id="@+id/btn_cancel_staff"
                android:layout_margin="18dp"
                android:textColor="@color/colorWhite"
                android:background="#DF0101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="cancel" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>

