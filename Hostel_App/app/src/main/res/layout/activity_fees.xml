<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fees">

    <LinearLayout

    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/mmmu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DF0101"
        android:text="Student Fee Details"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlueM"
        android:text="This module allows you to manage fee"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/e1"
        android:hint="Date"
        android:textSize="20sp"
        android:inputType="date"
        android:singleLine="true"
        android:textColorHint="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <EditText
        android:id="@+id/e2"
        android:inputType="text"
        android:singleLine="true"
        android:hint=" Student Name"
        android:textSize="20sp"
        android:textColorHint="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <EditText
        android:id="@+id/e3"
        android:inputType="number"
        android:singleLine="true"
        android:hint="Fee Amount"
        android:textSize="20sp"
        android:textColorHint="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <EditText
        android:id="@+id/e4"
        android:hint="Recieved Fee"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="20sp"
        android:textColorHint="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <EditText
        android:id="@+id/e5"
        android:inputType="number"
        android:singleLine="true"
        android:hint="Due Fee"
        android:textSize="20sp"
        android:textColorHint="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <EditText
        android:id="@+id/e6"
        android:inputType="number"
        android:singleLine="true"
        android:hint="Receipt Number"
        android:textSize="20sp"
        android:textColorHint="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <EditText
        android:id="@+id/e7"
        android:hint="Received By"
        android:inputType="text"
        android:singleLine="true"
        android:textSize="20sp"
        android:textColorHint="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_error_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#880000"
            android:textSize="16sp"
            android:visibility="gone" />


    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >



        <Button
            android:id="@+id/btn_submit_fees"
            android:layout_margin="18dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Submit" />



        <Button
            android:id="@+id/btn_cancel_fees"
            android:layout_margin="18dp"
            android:textColor="@color/colorWhite"
            android:background="#DF0101"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>
</ScrollView>


