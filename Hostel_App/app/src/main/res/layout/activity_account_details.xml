<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/cartoon"
    android:layout_height="match_parent"
    tools:context=".AccountDetails">

    <LinearLayout
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update your profile"
            android:textColor="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edfirst"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/edlast"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/edmobile"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="10"
            android:singleLine="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/eduser"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/edpass"
            android:textSize="18sp"
            android:layout_below="@id/eduser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:singleLine="true" />

            <ImageView
                android:id="@+id/eye"
                android:layout_marginLeft="270sp"
                android:layout_below="@id/eduser"
                android:background="@drawable/eyeoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edconpass"
            android:textSize="18sp"
            android:layout_below="@id/edpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:singleLine="true" />

        </RelativeLayout>

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/btupdate"
                android:layout_margin="10dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Update" />



            <Button
                android:id="@+id/btcancel"
                android:layout_margin="10dp"
                android:textColor="@color/colorWhite"
                android:background="#DF0101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="cancel" />
        </LinearLayout>




    </LinearLayout>

</ScrollView>